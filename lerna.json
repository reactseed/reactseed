{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "version": "independent",
  "useWorkspaces": true,
  "ignoreChanges": ["ignored-file", "**/__tests__/**", "**/*.md","**/*.yml"],
  "command": {
    "allowBranch": "main",
    "publish": {
      "verifyAccess": false,
      "registry": "https://registry.npmjs.org"
    },
    "version": {
      "allowBranch": ["main","dev"],
      "conventionalCommits": true
    }
  }
}
